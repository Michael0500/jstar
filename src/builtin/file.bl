class File {
	def new(handle) {
		this.__handle = handle;
	}

	native size();
	native readAll();
	native readLine();
	native close();
}

def open(name, mode) {
	if(!(name is String) or !(mode is String)) {
		error("Arguments of open must be strings.");
	}

	var handle = __open(name, mode);
	if(handle == null) {
		return null;
	}
	return File(handle);
}

native __open(name, mode);
