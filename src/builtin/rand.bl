def randint(a, b=null)
	if !isInt(a) or (b != null and !isInt(b)) then
		raise InvalidArgException("a and b must be integers")
	end
	return int(randrange(a, b))
end

def randrange(a, b=null)
	if b == null then
		b = a
		a = 0
	end

	if a > b then raise InvalidArgException("a must be <= b") end
	return a + random() * (b - a)
end

